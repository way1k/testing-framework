[pytest]
markers =
    api: Mark test to run only API tests
    ui: Mark test to run only UI tests
    rashorg: Mark test to run only Bashorg platform tests
    beqres: Mark test to run only Reqres platform tests

addopts =
    -p no:warnings
    --color=yes
;    -n 6
;    --reruns 1
;    --reruns-delay 5
log_cli = true
log_cli_level = DEBUG
log_format = %(asctime)s %(levelname)s %(message)s
log_date_format = %Y-%m-%d %H:%M:%S
